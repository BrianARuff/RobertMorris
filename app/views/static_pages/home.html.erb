<section class="home-section-a text-center">
	
    <div style="color: #fff;">
			<div>
				<h2 style="color: #d1c395;"><u>Today's Quote</u></h2>
			</div>
			<div>
				
				<h3>
					<em>
						<%= @quote_of_the_day.quote %>
					</em>
				</h3>

				<p>
						<em> - <%= @quote_of_the_day.author %> </em>
				</p>
				
				<% if @quote_of_the_day.narration? %>
						<h4 style="text-align: center;">
							Narration: <%= simple_format(@quote_of_the_day.narration.capitalize) %>
						</h4>
					<% end %>
					
			</div>
				
			<div>
				<% if @quote_of_the_day.message? %>
					<h4 style="text-align: center;">
						Message: <%= simple_format(@quote_of_the_day.message.capitalize) %>
					</h4>
				<% end %>
				
				<p>
					- <%= @quote_of_the_day.posted_by %>
				</p>
				
				<small style="color: #d1c395;">
					<%= "Posted on #{@quote_of_the_day.created_at.strftime('%B %d, %Y')}" %>
				</small>
				
			</div>
			<% if user_signed_in? %>
				<%= link_to  "Admin - Edit Quote", edit_quote_of_the_day_path(@quote_of_the_day), class: 'btn btn-warning' %>
