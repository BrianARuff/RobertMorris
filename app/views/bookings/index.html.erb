<main class="bookings-index">
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Bookings</h1>
  <h3 class="text-center">This page will be set to private once it's in production and the link to it will only be viewable by you, Mr. Morris.</h3>

  <table class="table table-striped table-responsive bookings-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Email</th>
        <th>Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.name %></td>
          <td><%= number_to_phone(booking.number) %></td>
          <td><%= booking.email %></td>
          <td><%= link_to booking.message.truncate(50), booking %></td>
          <td><%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Booking', new_booking_path %>
</main>