<%= form_with(model: load_image, local: true) do |form| %>
  <% if load_image.errors.any? %>
    <div id="error_explanation" class='text-center'>
      <h2><%= pluralize(load_image.errors.count, "error") %> prohibited this load_image from being saved:</h2>

      <ul>
      <% load_image.errors.full_messages.each do |message| %>
        <li style='list-style:none;'><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :load_image_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :load_image_description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <h3>Images</h3>
      <%= form.file_field :image, class: 'form-control' %>
      <h3>Videos</h3>
      <%= form.file_field :video, class: 'form-control'%>
    </div>




    <div class="actions">
      <%= form.submit 'Submit', class: 'btn btn-default btn-block text-center' %>
    </div>

    <%= hidden_field_tag :user_id, value: current_user.id if user_signed_in? %>
    <% end %>
  </div>
</div>