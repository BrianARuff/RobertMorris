<% if current_user.role %>

<div class="row text-center">
  <div class="col-md-6 col-md-offset-3">


    <% if @quote_of_the_day.exists? %>
    <div class="panel">
      <div class="panel-heading">
        <h2>Today's Quote</h2>
      </div>
      <div class="panel-body">
        <h3 style="text-align: center;">
          <i>
            <%= @quote_of_the_day.quote %>
          </i>
        </h3>

        <p style="color: #d1c395;">
            <i> - <%= @quote_of_the_day.author %> </i>
        </p>

        <% if @quote_of_the_day.narration? %>
          <h4 style="text-align: center;">
            <%= simple_format(@quote_of_the_day.narration) %>
          </h4>
        <% end %>

      </div>
      <div class="panel-footer">
        <% if @quote_of_the_day.message? %>
          <h4 style="text-align: center;">
            <%= simple_format(@quote_of_the_day.message) %>
          </h4>
        <% end %>
        <p>
          - <%= @quote_of_the_day.posted_by %>
        </p>
        <small>
          <%= "Posted on #{@quote_of_the_day.created_at.strftime('%B %d, %Y')}" %>
        </small>
      </div>
    </div>
    <% end %>
    
    <%= link_to 'Edit', edit_quote_of_the_day_path(@quote_of_the_day), class: 'btn btn-warning' %> |
    <%= link_to 'Back', quote_of_the_days_path, class: 'btn btn-default' %>
    <br><br>
  </div> 
</div>
<% end %>