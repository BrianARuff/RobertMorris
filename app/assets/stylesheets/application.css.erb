
@import "_bootstrap-sprockets.scss";
@import "_bootstrap.scss";

/* base styles */

body {
  font-family: 'Poppins', sans-serif;
  background: url('mic.jpg') no-repeat center;
  background-size: cover;
  margin: 2rem;
  padding: 2rem;
  overflow: scroll;
  color: #e1d6c4 !important;
  font-weight: bold;
}

#main-content {
  background: #4A647D;
  color: #e1d6c4 !important;
}

/* nav styles */

nav {
  background: #47525F;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #7f7e7e;
  list-style: none;
  overflow: hidden;
  position: static;
}

@media (max-width: 768px) {
  nav {
    display: block;
  }
}

nav li a, #main-content > nav > a {
  margin: 0 1rem;
  background-color: #47525F;
  padding: 25px;
  border: 1px solid #7f7e7e;
  border-radius: 5px;
  text-decoration: none;
  text-align: center;
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  box-shadow: 5px 10px #1c2838;
  color: #e1d6c4;

}

@media screen and (max-width: 768px){

  nav > a {
    display: none;
  }


}

nav li:nth-of-type(1) a {
  background: none;
  border: none;
  box-shadow: none;
}

nav a:hover, #main-content > nav > a:hover  {
  color: #fefefe;
  background: #606A77;
  text-decoration: none;
  border: 1px solid #fff;
  border-radius: 5px;
  font-weight: bold;
}

/* side slide bar menu */

.side-nav {
  height: 100%;
  width: 0px;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #1c2838;
  opacity: 0.9;
  overflow-x: hidden;
  padding-top: 60px;
  transition: 0.5s;
}

.side-nav a {
  padding: 10px 10px 10px 30px;
  text-decoration: none;
  font-size: 22px;
  display: block;
  transition: 0.5s;
}

.side-nav a:hover {
  color: #fff;
}

.side-nav .btn-close {
  position: absolute;
  top: 0;
  right: 22px;
  font-size: 36px;
  margin-left: 50px;
  color: #D1C395;
}

#main-content {
  transition: margin-left 0.5s;
}

@media (max-width: 768px) {
  .navbar-nav {display: none;}
  #main-content > nav > li> a{display: none;}
  #main-content > nav > li.logo > a > img{display: block;}
}

@media (min-width: 768px) {
  .open-slide {
    display: none;
  }
}

/*main home */

.home {
  margin: 2rem;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  background: #4A647D;
}

/*  new booksings */

.new-bookings, .edit-bookings, #main-content > div.col-md-6.col-md-offset-3 {
  color: #e1dbc4;
}

.new-bookings h1 {
  font-weight: bold;
}
/* new bookings form labels */
body > main > div > form > div > label, .sign-in {
  font-size: 20px;
  font-weight: lighter;
  color: #e1d6c4;
}

/* new bookings form background */
#booking_message, 
#booking_name, 
#booking_number, 
#booking_email, 
#user_email, 
#user_password,
#user_password_confirmation,
#user_current_password
  {
  background: #e1dbc4 !important;
  font-size: 24px;
  color: #47525f;
  text-align: center;
}

/* submit button */

body > main > div > form > div.actions > input,
#new_user > div.actions > input,
#main-content > main > div > form > div.actions > input,
 {
  background: #e1dbc4;
  color: #635c43;
  font-size: 16px;
  font-weight: bold;
}

body > main > div > form > div.actions > input:hover,
#new_user > div.actions > input:hover,
#main-content > main > div > form > div.actions > input:hover,
  {
  background-color: #47525f;
  color: #D1C395;
  font-size: 24px;
  border: 1px solid #fff;
}


/* bookings show page */

.show-booking {
  text-align: center;
  border: 1px solid #7f7e7e;
  color: #D1C395;
}

.booking-message h4 {
  font-size: 24px;
}

/* show edit button */
body > main > article > section:nth-child(6) > a {
  background-color: #D1C395;
  color: #47525f;
  border: 1px solid #7f7e7e;
  border-radius: 5px;
  padding-left: 4rem;
  padding-right: 4rem;
  font-weight: bold;
  font-size: 24px;
}

/* bookings index page */
 .bookings-index h1 {
  color: #e1d6c4 !important;
  font-weight: bold !important;
 }

 .bookings-index table {
  color: #e1d6c4;
  font-size: 24px;
 }

 .bookings-index tbody {
  color: #333;
 }

 /*about*/

 .about-bio {
  line-height: 2;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

 .about-bio img {
    width: 100%;
    height: 100%;
    object-fit: contain;
 }