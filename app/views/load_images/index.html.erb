
<div class='row'>
<div class='col-md-6 col-md-offset-3 table-responsive'>
<p id="notice"><%= notice %></p>

<h1 class='text-center'>Load Images</h1>
<% @load_images.each do |image| %>
<div class="panel text-center">
  <div class="panel-heading">
  <h2><%= image.name %></h2>
  </div>
  <div class="panel-body">
    
    <% if image.video && !image.image.url %>
      <%= video_tag image.video.to_s, controls: true %>    
    <% elsif image.image.url %>
      <%= link_to (image_tag (image.image.url), {class: 'img-responsive'}), load_images_url(image) %>
    <% end %>

  </div>
  <div class="panel-footer">
    <ul>
      <h3><%= image.description %></h3>
    </ul>
  </div>
</div>


<% end %>
<%= link_to 'Upload New Image', new_load_image_path, class: 'btn btn-default btn-block' %>
</>
</div>