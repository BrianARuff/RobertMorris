
<p id="notice"><%= notice %></p>

<h1 class="text-center">Speakings</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="color: #333;">
    <% @speakings.each do |speaking| %>
      <tr>
        <td><%= speaking.name %></td>
        <td><%= speaking.description %></td>
        <td><%= speaking.date %></td>
        <td><%= speaking.time %></td>
        <td><%= link_to 'Show', speaking %></td>
        <td><%= link_to 'Edit', edit_speaking_path(speaking) %></td>
        <td><%= link_to 'Destroy', speaking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Speaking', new_speaking_path, class: 'btn btn-primary btn-block' %>