<p id="notice"><%= notice %></p>

<h1 class="text-center">All Quotes <br><br></h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Quote</th>
      <th>Narration</th>
      <th>Author</th>
      <th>Message</th>
      <th>Posted by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quote_of_the_days.each do |quote_of_the_day| %>
      <tr>
        <td><%= quote_of_the_day.quote %></td>
        <td><%= quote_of_the_day.narration %></td>
        <td><%= quote_of_the_day.author %></td>
        <td><%= quote_of_the_day.message %></td>
        <td><%= quote_of_the_day.posted_by %></td>
        <td><%= link_to 'Show', quote_of_the_day %></td>
        <td><%= link_to 'Edit', edit_quote_of_the_day_path(quote_of_the_day) %></td>
        <td><%= link_to 'Destroy', quote_of_the_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Quote', new_quote_of_the_day_path, class: 'btn btn-primary btn-block' %>
