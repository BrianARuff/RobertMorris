<% if current_user.role %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">All Quotes <br><br></h1>
      <table class="table" style="overflow-x: scroll;">
        <thead>
          <tr>
            <th>Quote</th>
            <th>Author</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @quote_of_the_days.each do |quote_of_the_day| %>
            <tr>
              <td><%= quote_of_the_day.quote %></td>
              <td><%= quote_of_the_day.author %></td>
              <td><%= link_to  "Show", quote_of_the_day, class: 'btn btn-primary btn-block', style: 'margin: 0;' %></td>
              <td><%= link_to 'Edit', edit_quote_of_the_day_path(quote_of_the_day), class: 'btn btn-warning btn-block' %></td>
              <td><%= link_to 'Destroy', quote_of_the_day, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'Create New Quote', new_quote_of_the_day_path, class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>

<h1>No permission to view this page.</h1>